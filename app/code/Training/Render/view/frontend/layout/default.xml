<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block class="Magento\Framework\View\Element\Template" name="training.render.template.info" template="Training_Render::template.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="training.render.link" before="-">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Training Render</argument>
                    <argument name="path" xsi:type="string">training_render/action/onecolumn</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
